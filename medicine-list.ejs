<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Medicines</title>
</head>
<body>

  <h2>Your Medicines</h2>

  <!---search-->
  <form method="get" action="/medicines">
    <label for="search">Search Medicine:</label>
    <input type="text" id="search" name="search" value="<%= search %>">
    <button type="submit">Search</button>
  </form>

  <br>

  <!-- add-->
  <form action="/add-medicine" method="post">

    <label for="name">Medicine Name:</label><br>
    <input type="text" id="name" name="name" required><br><br>

    <label for="stock">Available Stock:</label><br>
    <input type="number" id="stock" name="stock" required><br><br>

    <button type="submit">Add Medicine</button>

  </form>

  <hr>

  <!-- unordered list -->
  <ul>
    <% medicines.forEach(function(medicine){ %>
      <li>
        <strong><%= medicine.name %></strong> |
        Stock: <%= medicine.stock %> |
        Added On: <%= medicine.createdAt.toLocaleString() %>


        <a href="/edit/<%= medicine._id %>"
   onclick="return confirm('Do you want to edit this medicine?')">
   Edit
</a>

        <a href="/delete/<%= medicine._id %>"
   onclick="return confirm('Are you sure you want to delete this medicine?')">
   Delete
</a>

      </li>
    <% }) %>
  </ul>

  <!-- PAGINATION -->
  <% for(let i = 1; i <= totalPages; i++){ %>
    <a href="/medicines?page=<%= i %>&search=<%= search %>">
      <%= i %>
    </a>
  <% } %>

  <br><br>

 <a href="/logout"
   onclick="return confirm('Do you really want to logout?')">
   Logout
</a>


</body>
</html>
